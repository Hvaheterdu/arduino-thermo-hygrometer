{
  "version": "0.0.4",
  "name": "frontend-vue",
  "author": "Burhan Mohammad Sarfraz <burhan.mohammad.sarfraz@outlook.com>",
  "description": "The frontend application for a ASP.NET Core Web API that measures temperature and air humidity through a Arduino IoT device.",
  "keywords": [
    "TypeScript",
    "Vue3",
    "Vue",
    "Vue 3",
    "Arduino",
    "IoT",
    "Temperature",
    "Air humidity"
  ],
  "bugs": {
    "url": "https://github.com/Hvaheterdu/arduino-thermo-hygrometer/issues",
    "email": "burhan.mohammad.sarfraz@outlook.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hvaheterdu/arduino-thermo-hygrometer"
  },
  "private": true,
  "type": "module",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "development": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version",
    "last 1 edge version"
  ],
  "scripts": {
    "build": "vue-tsc && vite build",
    "build:test": "vue-tsc && vite build --mode test",
    "dev": "vite",
    "format": "prettier --write \"*.{ts,vue,html,css,json,md}\"",
    "format:check": "prettier --check \"*.{ts,vue,html,css,json,md}\"",
    "lint": "eslint src/** --ext ts,vue --report-unused-disable-directives --max-warnings 0",
    "lint-staged": "lint-staged",
    "nswag": "nswag run nswag.json /runTime:Net80 --write src/**/api.generated.ts",
    "preview": "vite preview",
    "prepare": "cd ../.. && husky frontend/vue/.husky",
    "start": "vite",
    "version-bump-ps": "pwsh ./scripts/version_bump_ps.ps1",
    "version-bump-sh": "sh scripts/version_bump_sh.sh"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.41.0",
    "nswag": "^14.0.8",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-import-x": "^0.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-plugin-mkcert": "^1.17.5",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.21"
  }
}
